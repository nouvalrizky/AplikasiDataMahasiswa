<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header_daftarmhs"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="@drawable/group_81"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HALO ADMINISTRATOR"
            android:textColor="@color/white"
            android:fontFamily="@font/regular"
            android:textSize="12sp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang Aplikasi"
            android:textColor="@color/white"
            android:fontFamily="@font/semibold"
            android:textSize="24sp"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/radius_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@+id/header_daftarmhs">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/nouval"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/namaNouval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nouval Rizky Akbar Juliansyah"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/bold"
                android:textColor="@color/dark_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_image"/>

            <LinearLayout
                android:id="@+id/holderNim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/namaNouval">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_nomerinduk"/>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/NimMahasiswa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1905551065"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="300dp"
                android:layout_height="1.2dp"
                android:layout_marginTop="50dp"
                android:background="@color/light_grey"
                app:layout_constraintTop_toTopOf="@+id/holderNim"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>